---
import { SkipBack, SkipForward, RotateCw } from "@lucide/astro";
---

<div class="flex flex-wrap gap-5 mb-5 items-start">
	<div
		class="max-w-125 w-[calc(100vw-40px)] sm:max-w-[320px] lg:max-w-170"
		id="board"
	>
	</div>

	<div
		class="bg-slate-300/50 flex flex-col gap-4 px-16 w-100 py-4 font-sans glass-card"
	>
		<div class="info text-2xl" id="eval">Eval: 0.00</div>

		<div class="info" id="classification"></div>

		<div class="info" id="opening"></div>

		<div class="mt-2 text-xs text-center">
			Depth: <span id="eval-depth">0</span>
		</div>

		<section
			id="controls"
			class="flex justify-center gap-2 rounded-md bg-slate-400/30 px-4 py-2 w-fit mx-auto"
		>
			<button id="flip-board">
				<RotateCw />
			</button>
			<button id="go-back">
				<SkipBack />
			</button>
			<button id="go-forward">
				<SkipForward />
			</button>
		</section>
	</div>
</div>

<script src="@/board.ts"></script>
